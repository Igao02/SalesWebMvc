
@model SalesWebMVC.Models.Seller
@model SalesWebMVC.Models.ViewsModels.SellerFormViewModel

<!--Isso eu garanto que a minha view tem a disposição um objeto Seller -->

@{
    ViewData["Title"] = "Create";
}
<!--Criando a nossa página de cadastro do Seller-->
<h1>@ViewData["Title"]</h1>

<h4 class="fw-bold">Seller</h4>
<br />

<div class="row">
    <!--A classe acima é para que o div ocupe a largura da tela. Já a classe abaixo é para ocupar 1/3 da tela, pois o BootStrap
        divide a tela em 12 partes.
    -->
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />

                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>

            <!--Montando a caixa de seleção abaixo-->
            <div class="form-group">
                <label asp-for="Department_Id" class="control-label"></label>
                <select asp-for="Department_Id" asp-items="@(new SelectList("Id","Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />

                
            </div>


            </div>

        </form>
    </div>

</div>

